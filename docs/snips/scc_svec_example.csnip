char buffer[32];
char *endp;

int *svec = scc_svec_init(char);

fgets(buffer, sizeof(buffer), stdin);
for(unsigned i = 0; i < strlen(buffer); i++) {
    if(!isspace(buffer[i])) {
        if(!scc_svec_push(svec, buffer[i])) {
            /* Allocation failure */
            exit(1);
        }
    }
}

printf("Input without spaces: %*s\n", (int)scc_svec_size(svec), &svec[0]);

scc_svec_free(svec);
